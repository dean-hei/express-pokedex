<div class="container">
<div class="showOne">
    <div class="left">
        <img src="<%= pokemon.sprites.front_default %>" alt="<%= name %>" style="height:<%= pokemon.height * 20 %>">
        <h2><%= name %></h2>
    </div>
    <div class="right">
        <div>
            <h2>
                Info
            </h2>
        </div>
        <div>
            <ul>
                <li>
                    Height: <%= pokemon.height %>
                </li>
                <li>
                    Weight: <%= pokemon.weight %>
                </li>
                <li>
                    Type(s): 
                    <%= pokemon.types[0].type.name %>
                    <% if (pokemon.types.length > 1) { %>
                        , <%= pokemon.types[1].type.name %>
                    <% } %>
                </li>
                <li>
                    Abilities:
                    <%  pokemon.abilities.forEach(ability => { %>
                        <li><%= ability.ability.name %></li>
                    <% }); %>
                </li>
            </ul>
        </div>
        <div>
            <form method="POST" action="/pokemon/<%= name %>/?_method=DELETE">
                <input type="submit" class="btn btn-primary" value="Remove from favorites">
            </form>
        </div>
    </div>
</div>
<div class="moves">
    <%  pokemon.moves.forEach(move => { %>
        <p><%= move.move.name %></p>
    <% }); %>
</div>
</div>

